		insecticide.recargar()
		assert.equals(4, insecticide.shoots())
		const mosquitoDuro1 = new MosquitoHard(position = game.at(2, 3))
		mosquitoesManager.mosquitoes().add(mosquitoDuro1)
		insecticide.position(game.at(1, 3))
		mainCharacter.direction(rightDirection.nextMove(rightDirection, 1))
		insecticide.direction()
		mainCharacter.disparar()
		assert.equals(3, insecticide.shoots())
		assert.equals({
		}, mosquitoesManager.mosquitoes())
	}

